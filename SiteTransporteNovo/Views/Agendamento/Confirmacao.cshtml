@model SiteTransporteNovo.Models.Agendamento

@{
    ViewData["Title"] = "Confirmação de Agendamento";
}

<style>
    @@media print {
        @@page {
            margin: 0;
            size: auto; /* auto = tamanho automático */
        }

        body {
            margin: 0;
        }

        /* Oculta tudo que não seja a área de impressão */
        body * {
            visibility: hidden;
        }

        #areaImpressao, #areaImpressao * {
            visibility: visible;
        }

        #areaImpressao {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }
    }
</style>

<div id="areaImpressao" class="card p-4 mx-auto text-center" style="max-width: 700px; border-radius: 15px;">
    <h2 class="mb-4">Agendamento Realizado com Sucesso!</h2>

    <p><strong>Nome:</strong> @Model.Nome</p>
    <p><strong>Telefone:</strong> @Model.Telefone</p>
    <p><strong>Local da Consulta:</strong> @Model.LocalConsulta</p>

    @if (!string.IsNullOrEmpty(Model.OutroLocalConsulta))
    {
        <p><strong>Outro Local da Consulta:</strong> @Model.OutroLocalConsulta</p>
    }

    <p><strong>Local para Ir Buscar:</strong> @Model.LocalBusca</p>

    @if (!string.IsNullOrEmpty(Model.OutroLocalBusca))
    {
        <p><strong>Outro Local para Ir Buscar:</strong> @Model.OutroLocalBusca</p>
    }

    <p><strong>Data:</strong> @Model.Data.ToShortDateString()</p>
    <p><strong>Hora:</strong> @Model.Hora</p>
    <p><strong>Ponto de Referência:</strong> @Model.PontoReferencia</p>
    <p><strong>Motivo:</strong> @Model.Motivo</p>
    <p><strong>Precisa Acompanhante:</strong> @(Model.PrecisaAcompanhante ? "Sim" : "Não")</p>
    <p><strong>Responsável:</strong> @Model.Responsavel</p>
    <p><strong>Observação:</strong> @Model.Observacao</p>

    <p class="mt-3 text-success fw-bold">
        Para confirmar o horário do carro entre em contato: (11) 97189-3286
        <br />Atendimento das 13h às 16h.
    </p>
</div>

<div class="mt-3">
    <button onclick="window.print()" class="btn btn-secondary w-100 mb-2">Imprimir Confirmação</button>
    <a asp-controller="Menu" asp-action="Index" class="btn btn-primary w-100">Voltar ao Menu</a>
</div>
