@model IEnumerable<SiteTransporteNovo.Models.Agendamento>

@{
    ViewData["Title"] = "Imprimir Agendamentos";
    Layout = null; // Uma página separada para impressão geralmente não precisa do layout padrão
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        /* Estilos gerais da tabela para impressão */
        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 10px; /* Mantendo o tamanho de fonte menor para impressão */
        }

        th, td {
            border: 1px solid #000; /* Borda preta sólida para impressão */
            padding: 8px;
            text-align: left;
        }

        /* Remova esta linha se você não quer fundo cinza no cabeçalho.
                   Vamos redefinir com as cores do Bootstrap.
                th {
                    background-color: #f2f2f2;
                }
                */

        /* Estilos para o cabeçalho da tabela (table-dark) - ADICIONADO/MODIFICADO */
        .table-dark thead,
        .table-dark th {
            background-color: #343a40 !important; /* Cor de fundo do thead do Bootstrap Dark */
            color: #fff !important; /* Cor do texto do thead do Bootstrap Dark */
            -webkit-print-color-adjust: exact; /* Garante a impressão da cor de fundo */
            color-adjust: exact; /* Garante a impressão da cor de fundo */
        }

        /* Estilos para linhas alternadas (table-striped) - ADICIONADO/MODIFICADO */
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.05) !important; /* Cor de fundo para linhas ímpares (Bootstrap Striped) */
            -webkit-print-color-adjust: exact;
            color-adjust: exact;
        }

        /* Estilos para bordas da tabela (table-bordered) - ADICIONADO/MODIFICADO */
        .table-bordered th,
        .table-bordered td {
            border: 1px solid #dee2e6 !important; /* Cor da borda do Bootstrap */
        }

        /* Estilos para as cores das linhas baseadas no TipoCarro */
        .table-warning {
            background-color: #ffc107 !important; /* Cor amarela do Bootstrap */
            -webkit-print-color-adjust: exact;
            color-adjust: exact;
        }

        .table-danger {
            background-color: #dc3545 !important; /* Cor vermelha do Bootstrap */
            color: #fff !important; /* Texto branco para melhor contraste no vermelho */
            -webkit-print-color-adjust: exact;
            color-adjust: exact;
        }

        /* Estilos para o local de busca em destaque */
        .text-danger {
            color: #dc3545 !important;
        }

        .fw-bold {
            font-weight: bold !important;
        }

        /* Remover elementos não necessários para impressão */
        .mb-2, .btn, form { /* Oculta o botão "Voltar" e o formulário de filtro na impressão */
            display: none;
        }

        /* Força a tabela a ocupar 100% da largura, se necessário, e remove overflow */
        #areaTabela {
            overflow-x: visible !important;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center mb-3">Lista de Agendamentos</h2>
        <table class="table table-bordered table-striped w-100">
            <thead class="table-dark text-center align-middle">
                <tr>
                    <th>Nome</th>
                    <th>Telefone</th>
                    <th>Data</th>
                    <th>Hora</th>
                    <th>Local Consulta</th>
                    <th>Local Busca</th>
                    <th>Ponto Referência</th>
                    <th>Motivo</th>
                    <th>Acompanhante</th>
                   
                    <th>Observação</th>
                    <th>Tipo de Carro</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    string rowClass = "";
                    if (item.TipoCarro == "Carro Prioritário")
                    {
                        rowClass = "table-warning"; // amarelo
                    }
                    else if (item.TipoCarro == "Ambulância" || item.TipoCarro == "Ambulância com Oxigênio")
                    {
                        rowClass = "table-danger"; // vermelho
                    }

                    bool localBuscaDestaque = !string.IsNullOrEmpty(item.LocalBusca)
                    && !string.Equals(item.LocalBusca, "PS", StringComparison.OrdinalIgnoreCase)
                    && !string.Equals(item.LocalBusca, "Pedra Bela", StringComparison.OrdinalIgnoreCase);

                    <tr class="@rowClass text-center align-middle">
                        <td>@item.Nome</td>
                        <td>@item.Telefone</td>
                        <td>@item.Data.ToShortDateString()</td>
                        <td>@item.Hora</td>
                        <td>
                            @item.LocalConsulta
                            @if (!string.IsNullOrEmpty(item.OutroLocalConsulta))
                            {
                                <div><strong>Outro:</strong> @item.OutroLocalConsulta</div>
                            }
                        </td>
                        <td class="@(localBuscaDestaque ? "text-danger fw-bold" : "")">
                            @item.LocalBusca
                            @if (!string.IsNullOrEmpty(item.OutroLocalBusca))
                            {
                                <div><strong>Outro:</strong> @item.OutroLocalBusca</div>
                            }
                        </td>
                        <td>@item.PontoReferencia</td>
                        <td>@item.Motivo</td>
                        <td>@(item.PrecisaAcompanhante ? "Sim" : "Não")</td>
                       
                        <td>@item.Observacao</td>
                        <td>
                            @if (item.TipoCarro == "Outro")
                            {
                                @item.TipoCarroOutro
                            }
                            else
                            {
                                @item.TipoCarro
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script>
        window.onload = function() {
            window.print();
            // Opcional: Fechar a janela de impressão após um breve período
            // setTimeout(function() { window.close(); }, 100);
        };
    </script>
</body>
</html>